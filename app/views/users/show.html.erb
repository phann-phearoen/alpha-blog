<h1 class="text-center mt-4"><%= @user.username %></h1>
<%= gravatar_for @user, size: 200 %>

<% if logged_in? && @user.id == current_user.id %>
    <div class="text-center mt-4">
        <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-info shadow" %>
        <%= link_to "Delete your profile", user_path(current_user), class: "btn btn-danger shadow", method: :delete, data: { confirm: "Are you sure?"} %>
    </div>
<% end %>

<h3 class="text-center mt-3">Has created articles</h3>

<div class="flickr_pagination">
    <%= will_paginate @articles, :container => false %>
</div>

<%= render 'articles/article-card' %>

<div class="flickr_pagination my-3">
    <%= will_paginate @articles, :container => false %>
</div>