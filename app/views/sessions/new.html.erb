<h1 class="text-center mt-4">Log in</h1>

<div class="p-3 my-3">

    <div class="row justify-content-center">
        <div class="col-10">
            <%= form_with(scope: :session, local: true, url: login_path, class: "container shadow rounded bg-info p-2") do |f| %>

                <div class="form-group row my-2">
                    <%= f.label :email, class: "col-2 col-form-label" %>
                    <div class="col-10">
                        <%= f.email_field :email, class: "form-control shadow", placeholder: "Enter email" %>
                    </div>
                </div>

                <div class="form-group row my-2">
                    <%= f.label :password, class: "col-2 col-form-label" %>
                    <div class="col-10">
                        <%= f.password_field :password, class: "form-control shadow", placeholder: "Enter password" %>
                    </div>
                </div>

                <div class="form-group container mt-2 text-center">            
                    <%= f.submit "Log in", class: "btn btn-outline-light btn-lg" %>
                </div>

            <% end %>
        </div>
    </div>
</div>

<div class="container text-center">  
    <%= link_to '[Cancel and return to articles list]', articles_path %>
</div>