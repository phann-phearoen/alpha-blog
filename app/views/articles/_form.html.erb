<div class="p-3 my-3">

    <div class="row justify-content-center">
        <div class="col-10">
            <%= render 'shared/error' %>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-10">
            <%= form_with(model: @article, local: true, class: "container shadow rounded bg-info p-2") do |f| %>

                <div class="form-group row mb-2">
                    <%= f.label :title, class: "col-2 col-form-label" %>
                    <div class="col-10">
                        <%= f.text_field :title, class: "form-control shadow" %>
                    </div>
                </div>

                <div class="form-group row my-2">
                    <%= f.label :description, class: "col-2 col-form-label" %>
                    <div class="col-10">
                        <%= f.text_area :description, rows: 5, class: "form-control shadow" %>
                    </div>
                </div>

                <div class="form-group container mt-2 text-center">            
                    <%= f.submit class: "btn btn-outline-light btn-lg" %>
                </div>

            <% end %>
        </div>
    </div>
</div>

<div class="container text-center">  
    <%= link_to '[Cancel and return to articles list]', articles_path %>
</div>